<?php
class Palindrome
{
    public static function isPalindrome($word)
    {
        $word=strtolower($word);
        $word=preg_replace('/[^a-zA-Z]/','',$word);
        $wordPanjang=strlen($word);
        $wordSplit=ceil($wordPanjang/2);
        
        if($wordPanjang % 2 ==0){
            $firsthalf=substr($word,0,$wordSplit);
            $secondhalf=substr($word,$wordSplit,$wordSplit);
        }else{
            $firsthalf=substr($word,0,$wordSplit-1);
            $secondhalf=substr($word,$wordSplit,$wordSplit);
        }
        
        $secondhalf=strrev($secondhalf);
        return $word == strrev($secondhalf);
        
    }
}

echo Palindrome::isPalindrome('Deleveled');

?>
